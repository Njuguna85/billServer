<style>
    @import url('https://fonts.googleapis.com/css2?family=Quicksand&display=swap');

    body {
        padding: 0;
        margin: 0;
        scroll-behavior: smooth;
        width: 100vw;
        height: 100vh;
    }

    .container {
        display: flex;
        flex-direction: row;
    }

    .businesses-list {
        height: max-content;
        width: 95vw;
        padding: 10px 0 0 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    #searchInput {
        width: 65%;
        background: whitesmoke;
        border: 1px solid #ef5350;
        color: #701d35;
        font-weight: 500;
        height: 2em;
        padding: 0 1em;
        margin-bottom: 5px;
    }

    .businesses-list-content {
        display: flex;
        align-items: center;
        overflow-x: scroll;
        height: 5em;
        width: 100%;
    }

    .businesses-list-content a:first-child {
        margin-left: 10px;
    }

    .businesses-list-paginators {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 5px 0;
    }

    .businesses-list-paginators button {
        height: 95%;
        display: inline-flex;
        align-items: center;
        background: #111d5e;
        padding: 0 1em;
        transform: skew(-20deg);
        -webkit-transform: skew(-20deg);
        -moz-transform: skew(-20deg);
        color: white;
        font-weight: bolder;
        margin-right: auto;
    }

    .businesses-list .bus {
        background: whitesmoke;
        border: 1px solid #ef5350;
        border-radius: 5px;
        color: #ef5350;
        height: 1.2em;
        display: flex;
        align-items: center;
        min-width: max-content;
    }

    .businesses-list .bus.active {
        background: blueviolet;
        color: white;
    }

    .businesses-details {
        display: none;
        background-color: #CFD8DC;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        overflow-x: scroll;
        height: 100vh;
        width: 100vw;
        z-index: 100;
    }

    .modal {
        background-color: white;
        width: 65%;
        max-width: 100%;
        padding: 30px 50px;
        box-shadow: 0 2px 4px rgba(0, 0, 0, .2);
        text-align: center;
        margin: 0 auto;
    }

    .businesses-details p,
    .businesses-details h3,
    .businesses-details h5 {
        margin: 5px;
    }

    .businesses-details figure {
        display: flex;
        justify-content: center;
    }

    .businesses-details h3 {
        text-align: center;
        font-size: 1.2em;
        text-decoration: underline;
        text-transform: uppercase;
    }

    .businesses-details h2 {
        text-transform: uppercase;
        text-align: center;
        font-weight: bolder;
    }

    .businesses-details p,
    .businesses-details li,
    .businesses-details ol {
        font-size: .8em;
    }

    .sticky {
        position: sticky;
        position: -webkit-sticky;
        top: 0;
        display: flex;
        justify-content: space-between;
        transition: all .2s;
        padding: 10px;
    }

    .sticky>div {
        display: flex;
        flex-direction: column;
        width: fit-content;
    }


    #shop {
        height: min-content;
    }

    #closeModal {
        color: rgb(206, 59, 59);
        font-size: 2.5em;
        border: none;
        background: none;
    }

    #closeModal:hover,
    #closeModal:focus,
    #closeModal:active {
        color: coral;
        transform: scale(1.1);
        transform: rotate(10deg);
    }

    #map {
        width: 100%;
        height: 90%;
        margin: 0;
    }

    .businessesSuggestion {
        padding: 10px;
    }

    .gm-style .gm-style-iw {
        padding-top: 0 !important;
    }

    .gm-style .gm-style-iw-c {
        padding: 0 !important;
    }
</style>
{{#if businessesList}}
<div class="businesses-list" style="display: none;">
    <input id="searchInput" class="controls" type="text" placeholder="Enter a location">
    <div class="businesses-list-content"></div>
    <div class="businesses-list-paginators"></div>
</div>
{{/if}}
<div class="businesses-details"></div>
<div id="loader"></div>
<div id="map" style="display: none;"></div>

<script>
    var businessesAPI = '{{businessesAPI}}';
    var businessesList = {{{ json businessesList }}};
    var paginators = {{{ json paginators }}};
   
</script>